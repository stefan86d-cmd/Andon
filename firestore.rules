rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserInOrg(orgId) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.orgId == orgId;
    }

    // Users Collection
    match /users/{userId} {
      // Allow a user to read and update their own document
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Allow a new user to create their own document
      allow create: if request.auth != null;

      // Allow any user within an organization to read documents of other users in the same org.
      // This is needed for admins/supervisors to list users.
      allow get, list: if request.auth != null && isUserInOrg(resource.data.orgId);
    }

    // Production Lines Collection
    match /productionLines/{lineId} {
      allow read, write: if request.auth != null && isUserInOrg(resource.data.orgId);
    }

    // Issues Collection
    match /issues/{issueId} {
      allow read, write: if request.auth != null && isUserInOrg(resource.data.orgId);
    }
  }
}
